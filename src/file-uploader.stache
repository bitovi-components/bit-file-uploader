<div class="file-upload-container">
    <input
        type="file"
        name="file-upload"
        class="file-upload {{#fileReady}}file-upload-ready{{/fileReady}}"
        {{#fileTypes.length}}accept="{{fileTypeList}}"{{/fileTypes.length}}
        {{#isMultiple}} multiple {{/isMultiple}}
        id="{{fileUploadId}}"
    />
    {{#fileTypes.length}}<p class="file-upload-types">{{fileTypeList}}</p>{{/fileTypes.length}}
</div>
